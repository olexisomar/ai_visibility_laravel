# ==================== APPLICATION ====================
APP_NAME="AI Visibility Tracker"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
ASSET_URL=

# ==================== LOGGING ====================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ==================== DATABASE ====================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# ==================== CACHE & SESSION ====================
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# ==================== API AUTHENTICATION ====================
# Generate a random string for security
API_KEY=your-random-api-key-here

# ==================== OPENAI ====================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
TEMPERATURE=0.2
OPENAI_HTTP_TIMEOUT=60

# ==================== GOOGLE GEMINI ====================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash

# ==================== SERPAPI (for Google AIO & PAA) ====================
# Get your API key from: https://serpapi.com/manage-api-key
SERPAPI_KEY=your-serpapi-key-here
SERPAPI_HL=en
SERPAPI_GL=us
SERPAPI_LOCATION="United States"
SERPAPI_PAA_BUDGET=10
SERP_HTTP_TIMEOUT=60

# ==================== GOOGLE OAUTH (GSC) ====================
# Set up OAuth credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/oauth/google/callback

# ==================== TOPIC GENERATION ====================
ADMIN_TIME_BUDGET_SEC=650
MAX_AI_TOTAL=6
MAX_AI_PER_PROVIDER=3
PAA_PER_SEED=2
MIN_BRANDED_Q=1

# ==================== LLM CONFIGURATION ====================
LLM_PROVIDERS=openai,gemini
LLM_MULTI_BATCH=2

# ==================== GPT MONITORING ====================
RUN_CONCURRENCY=6
RUN_PAGE_SIZE=200
RATE_LIMIT_MS=0

# ==================== GOOGLE AIO MONITORING ====================
AIO_CONCURRENCY=3
AIO_PAGE_SIZE=50
AIO_RATE_LIMIT_MS=1000

# ==================== TIME ZONE ====================
APP_TIMEZONE=America/Costa_Rica

# ==================== MAIL CONFIGURATION ====================
# For Gmail: Enable 2FA and create an App Password
# Tutorial: https://support.google.com/accounts/answer/185833
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-16-char-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"